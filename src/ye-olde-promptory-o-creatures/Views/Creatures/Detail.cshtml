@model ye_olde_promptory_o_creatures.Models.Creatures

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Ye Ole Prompt'ry O' Creatures";

}


<h1>Ye Ole Prompt'ry O' Creatures</h1>
<div class="row">
    <div class="col-md-6">
        <h3><strong>@Model.CreatureName</strong></h3>
        <div class="row">
            <div class="col-md-6">
                <h5><strong>Location:</strong> @Model.Location</h5>
            </div> 
        </div>
        <div class="row">
            <div class="col-md-6">
                <h5><strong>Description:</strong></h5>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <p>@Model.Description</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <img src="~/Images/Dragons/purpleDragon.jpg" />
    </div>
</div>



 
